{
  "name": "samm-evm",
  "version": "1.0.0",
  "description": "SAMM (Stableswap Automated Market Maker) implementation for EVM",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/**/*.test.js",
    "test:integration": "hardhat test test/integration/**/*.test.js",
    "test:offchain": "mocha test/offchain/**/*.test.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "validate:sepolia": "hardhat run scripts/validate-deployment-ready.js --network sepolia",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:monad": "hardhat run scripts/deploy-monad.js --network monad",
    "deploy:risechain": "hardhat run scripts/deploy-risechain-testnet.js --network risechain",
    "deploy:risechain:testnet": "node scripts/deploy-risechain-testnet.js",
    "test:sepolia": "hardhat run scripts/test-sepolia-deployment.js --network sepolia",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "node": "hardhat node",
    "clean": "hardhat clean && rm -rf cache artifacts",
    "backend": "node start-unified-backend.js",
    "backend:test": "node test-unified-backend.js",
    "service:dev": "cd services && npm run dev",
    "service:start": "cd services && npm start",
    "validate:setup": "node scripts/validate-multi-chain-setup.js",
    "validate:setup:sepolia": "node scripts/validate-multi-chain-setup.js sepolia",
    "validate:setup:monad": "node scripts/validate-multi-chain-setup.js monad",
    "validate:setup:risechain": "node scripts/validate-risechain-setup.js",
    "estimate:gas": "node scripts/estimate-gas.js",
    "estimate:gas:sepolia": "node scripts/estimate-gas.js sepolia",
    "estimate:gas:monad": "node scripts/estimate-gas.js monad",
    "estimate:gas:risechain": "node scripts/estimate-gas.js risechain",
    "deploy:multi": "node scripts/deploy-multi-chain.js all",
    "deploy:multi:testnet": "node scripts/deploy-multi-chain.js sepolia",
    "deploy:multi:testnets": "node scripts/deploy-multi-chain.js all --continue-on-error",
    "test:e2e:sepolia": "node scripts/test-end-to-end-sepolia.js",
    "test:e2e:all": "npm run test:e2e:sepolia && echo 'Sepolia passed, ready for other testnets'",
    "verify:setup": "node scripts/verify-setup.js"
  },
  "keywords": [
    "SAMM",
    "AMM",
    "DeFi",
    "Solidity",
    "EVM",
    "Token Swap"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.0",
    "ethers": "^6.4.0",
    "fast-check": "^4.3.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.0.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.13.2",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "supertest": "^7.1.4"
  }
}
